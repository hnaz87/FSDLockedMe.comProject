package mypackage;
import java.util.*;
import java.io.*;

public class LockedMe {
	
	
	
    
	
	public static void printMenu(String[] options)
	{
		
		System.out.println("Would you like to try the options given below?");
        for (String option : options)
        {
        	
            System.out.println(option);
        }
        System.out.print("\n Choose your option : ");
    }
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/**Welcome Screen of LockedMe.com*/
		
		
		System.out.println("===============================================================================");

		System.out.println("\t\t\t \b Welcome to LockeMe.com");
		
		System.out.println("===============================================================================");
		System.out.println("\t\t ******This is created by Hina Naz.********\n\n\n\n");
		
		System.out.println("\t\t#### How about getting to know about LockedMe.com ####\n\n\n");

		
		
		String[] options = {"1- View Files ", "2- Operate on Files ", "3- Exit "};
		
		Scanner scanner = new Scanner(System.in);
		int option=1;
        
        while (option!=3)
        {
            printMenu(options);
            try
            {
            option = scanner.nextInt();
            switch (option)
            {
            case 1: viewFiles(); break;
            case 2: fileOperations(); break;
            case 3: exit();
            }
        
            }
            catch (InputMismatchException ex)
            {
                System.out.println("Please enter an integer value between 1 and " + options.length);
                scanner.next();
            }
            catch (Exception ex)
            {
                System.out.println("An unexpected error happened. Please contact the admin@Lockedme.com");
                scanner.next();
            }
            finally
            {
            }
        }
	}
            
            //Menu options
            
            public static void viewFiles() 
            {
                System.out.println("Thanks for choosing option 1");
            }
            public static void fileOperations()
            {
                System.out.println("Thanks for choosing option 2");
            }
            public static void  exit()
            {
                System.out.println("Thanks for choosing option 3");
            }
            

        





	}


